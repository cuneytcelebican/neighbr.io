<div class="col-md-6">
    <div class="login-form">
        <div class="logo-login-register-form">
            <a class="navbar-brand" href="/">neighbr.io</a>
        </div>
        <h1>{{title}}</h1>
        <p>Welcome back!</p>
        <form method="GET" action="/request">
            <div class="form-group">
                <label for="exampleInputEmail1">Email address</label>
                <input type="email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
            </div>
            <div class="form-group">
                <label for="exampleInputPassword1">Password</label>
                <input type="password" class="form-control" id="exampleInputPassword1">
            </div>
            <div class="form-group">
                <small><a href="#">Forgot password?</a></small>
            </div>
            <button type="submit" class="btn btn-purple justify-content-end">Login</button>
        </form>
        <div class="login-create-account">
            <a href="/register">Do not have an account?</a>
        </div>
    </div>
</div>

<style>
    header {
        display: none;
    }
    body{
        background: #E0EAFC;  /* fallback for old browsers */
        background: -webkit-linear-gradient(to right, #CFDEF3, #E0EAFC);  /* Chrome 10-25, Safari 5.1-6 */
        background: linear-gradient(to right, #CFDEF3, #E0EAFC); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */ 
    }
</style>
